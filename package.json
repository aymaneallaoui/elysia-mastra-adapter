{
  "name": "elysia-mastra-adapter",
  "version": "1.0.1",
  "description": "Production-ready Elysia server adapter for Mastra AI framework with full type safety",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node --external \"*\" && bun run build:types",
    "build:types": "tsc --project tsconfig.build.json",
    "dev": "bun run --watch src/index.ts",
    "test": "cross-env NODE_ENV=test bun test",
    "test:watch": "cross-env NODE_ENV=test bun test --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"examples/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"examples/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run clean && bun run lint && bun run typecheck && bun run test && bun run build",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "elysia",
    "mastra",
    "adapter",
    "server",
    "ai",
    "agents",
    "workflows",
    "bun",
    "typescript",
    "type-safe",
    "streaming",
    "sse",
    "mcp",
    "llm"
  ],
  "author": "Aymane Allaoui <aymaneallaoui@github>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aymaneallaoui/elysia-mastra-adapter"
  },
  "bugs": {
    "url": "https://github.com/aymaneallaoui/elysia-mastra-adapter/issues"
  },
  "homepage": "https://github.com/aymaneallaoui/elysia-mastra-adapter#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "elysia": ">=1.0.0",
    "@mastra/server": ">=1.0.0-beta.0",
    "@mastra/core": ">=1.0.0-beta.0"
  },
  "peerDependenciesMeta": {
    "@mastra/core": {
      "optional": false
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@mastra/core": "1.0.0-beta.20",
    "@mastra/server": "1.0.0-beta.20",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/npm": "^13.1.3",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/bun": "latest",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "cross-env": "^10.1.0",
    "elysia": "^1.4.21",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "fast-check": "^4.5.3",
    "prettier": "^3.2.0",
    "semantic-release": "^25.0.2",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0"
  },
  "dependencies": {
    "@elysiajs/swagger": "^1.3.1"
  }
}
