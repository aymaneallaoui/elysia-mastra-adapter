{
  "name": "elysia-mastra-adapter",
  "version": "0.1.0",
  "description": "Production-ready Elysia server adapter for Mastra AI framework with full type safety",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target bun && bun run build:types",
    "build:types": "tsc --project tsconfig.build.json",
    "dev": "bun run --watch src/index.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"examples/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"examples/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run clean && bun run lint && bun run typecheck && bun run test && bun run build",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "bun run build && changeset publish"
  },
  "keywords": [
    "elysia",
    "mastra",
    "adapter",
    "server",
    "ai",
    "agents",
    "workflows",
    "bun",
    "typescript",
    "type-safe",
    "streaming",
    "sse",
    "mcp",
    "llm"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "bugs": {
    "url": ""
  },
  "homepage": "",
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "elysia": ">=1.0.0",
    "@mastra/server": ">=1.0.0-beta.0",
    "@mastra/core": ">=1.0.0-beta.0"
  },
  "peerDependenciesMeta": {
    "@mastra/core": {
      "optional": false
    }
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.0",
    "@eslint/js": "^9.0.0",
    "@mastra/core": "1.0.0-beta.20",
    "@mastra/server": "1.0.0-beta.20",
    "@types/bun": "latest",
    "elysia": "^1.4.21",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "fast-check": "^4.5.3",
    "prettier": "^3.2.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0"
  },
  "dependencies": {
    "@elysiajs/swagger": "^1.3.1"
  }
}
